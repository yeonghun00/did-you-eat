rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to families collection for authenticated users
    match /families/{familyCode} {
      allow read, write: if request.auth != null;
      
      // Allow access to subcollections within families
      match /recordings/{document=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}